@model IEnumerable<Sporting2021_power.Models.Technician>

@{
    ViewData["Title"] = "Index";
}

<h1>Technician Manager</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-inverse table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.TechnicianId">Edit</a> 
                </td>
                <td>
                <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.TechnicianId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
